{
  "name": "read-comics",
  "version": "1.0.0",
  "description": "本地看漫画应用 - Vue3 + TypeScript + Pinia + TailwindCSS + Vite + NestJS",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --recursive build",
    "test": "pnpm run --recursive test",
    "lint": "pnpm run --recursive lint",
    "lint:fix": "pnpm run --recursive lint:fix",
    "type-check": "pnpm run --recursive type-check",
    "clean": "pnpm run --recursive clean",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "test:frontend": "pnpm --filter frontend test",
    "test:backend": "pnpm --filter backend test"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "keywords": [
    "comics",
    "manga",
    "reader",
    "vue3",
    "typescript",
    "nestjs",
    "vite",
    "pinia",
    "tailwindcss"
  ],
  "author": "AI Assistant",
  "license": "MIT",
  "dependencies": {
    "@read-comics/types": "workspace:^",
    "@read-comics/utils": "workspace:^"
  }
}