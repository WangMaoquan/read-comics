{
  "name": "read-comics",
  "version": "1.0.0",
  "description": "本地看漫画应用 - Vue3 + TypeScript + Pinia + TailwindCSS + Vite + NestJS",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:all": "pnpm run --parallel dev",
    "dev:backend": "pnpm --filter backend dev",
    "dev:admin": "pnpm --filter admin dev",
    "dev:web": "pnpm --filter frontend dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:admin-stack": "pnpm --filter backend --filter admin run --parallel dev",
    "dev:web-stack": "pnpm --filter backend --filter frontend run --parallel dev",
    "build": "pnpm run --recursive build",
    "build:backend": "pnpm --filter backend build",
    "build:admin": "pnpm --filter admin build",
    "build:web": "pnpm --filter frontend build",
    "test": "pnpm -F frontend test",
    "test:ui": "pnpm -F frontend test:ui",
    "test:coverage": "pnpm -F frontend test:coverage",
    "lint": "pnpm run --recursive lint",
    "lint:fix": "pnpm run --recursive lint:fix",
    "type-check": "pnpm run --recursive type-check",
    "clean": "pnpm run --recursive clean"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.19.2",
    "@vitest/ui": "^4.0.15",
    "@vue/test-utils": "2.4.0-alpha.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "happy-dom": "^20.0.11",
    "husky": "^8.0.3",
    "jsdom": "^27.3.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.25.0",
  "keywords": [
    "comics",
    "manga",
    "reader",
    "vue3",
    "typescript",
    "nestjs",
    "vite",
    "pinia",
    "tailwindcss"
  ],
  "author": "AI Assistant",
  "license": "MIT",
  "dependencies": {
    "@read-comics/types": "workspace:^",
    "@read-comics/utils": "workspace:^"
  },
  "pnpm": {
    "overrides": {
      "typescript": "^5.7.3",
      "@types/node": "^22.10.7",
      "@eslint/js": "^9.18.0",
      "vite": "npm:rolldown-vite@7.2.2"
    },
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@scarf/scarf",
      "bcrypt",
      "sharp",
      "unrs-resolver",
      "esbuild"
    ]
  }
}